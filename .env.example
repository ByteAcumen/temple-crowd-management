# ======================
# SERVER CONFIGURATION
# ======================
NODE_ENV=development
PORT=5000
API_VERSION=v1
FRONTEND_URL=http://localhost:3000

# ======================
# DATABASE
# ======================
MONGODB_URI=mongodb://localhost:27017/temple_crowd_management
MONGODB_USER=admin
MONGODB_PASSWORD=your_password_here

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Firebase
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# ======================
# AUTHENTICATION
# ======================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRE=30d

# OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# ======================
# EXTERNAL APIs
# ======================
# Weather
OPENWEATHER_API_KEY=your_openweather_api_key
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5

# Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# SMS & Notifications
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key

# Email (Optional)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@templecrowdmanagement.com

# ======================
# ML SERVICES
# ======================
ML_DETECTION_URL=http://localhost:8001
ML_FORECASTING_URL=http://localhost:8002
ML_ANOMALY_URL=http://localhost:8003

# ML Service Timeouts (seconds)
ML_REQUEST_TIMEOUT=30

# ======================
# MESSAGE QUEUE
# ======================
RABBITMQ_URL=amqp://admin:password@localhost:5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=password

# Alternative: Kafka
# KAFKA_BROKERS=localhost:9092
# KAFKA_CLIENT_ID=temple-crowd-management

# ======================
# FILE STORAGE
# ======================
# Local Storage
UPLOAD_DIR=./uploads

# AWS S3 (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-south-1
AWS_S3_BUCKET=temple-crowd-management

# ======================
# MONITORING & LOGGING
# ======================
# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn

# Log Level
LOG_LEVEL=info

# ======================
# SECURITY
# ======================
# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ======================
# FEATURE FLAGS
# ======================
ENABLE_SOCIAL_LOGIN=false
ENABLE_PAYMENT_GATEWAY=false
ENABLE_IOT_SENSORS=false

# ======================
# TEMPLE CONFIGURATION
# ======================
# Default Temple Settings
DEFAULT_SLOT_DURATION=30
DEFAULT_DAILY_CAPACITY=10000
ALERT_THRESHOLD_PERCENTAGE=90

# ======================
# ML MODEL PATHS
# ======================
YOLO_MODEL_PATH=./ml-services/crowd-detection/models/yolov8n.pt
LSTM_MODEL_PATH=./ml-services/crowd-forecasting/models/lstm_best.pt
PROPHET_MODEL_PATH=./ml-services/crowd-forecasting/models/prophet_model.pkl
ISOLATION_FOREST_PATH=./ml-services/anomaly-detection/models/isolation_forest.pkl

# ======================
# DEVELOPMENT TOOLS
# ======================
# Swagger API Docs
ENABLE_API_DOCS=true

# Debug Mode
DEBUG=false
