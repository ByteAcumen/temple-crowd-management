# =====================================================
# Temple Crowd Management — Backend Environment
# Copy this file to .env and fill in your values.
# Docker mode: these are set automatically via docker-compose.dev.yml
# =====================================================

# Server
NODE_ENV=development
PORT=5001

# MongoDB (Docker: use container name; local: use localhost)
MONGO_URI=mongodb://temple-mongo-dev:27017/temple_db
# For local dev (no Docker): MONGO_URI=mongodb://localhost:27017/temple_db

# Redis (Docker: use container name; local: use localhost)
REDIS_HOST=temple-redis-dev
REDIS_PORT=6379
# For local dev (no Docker): REDIS_HOST=localhost

# JWT — Change this to a random 32+ char string in production!
JWT_SECRET=temple_dev_jwt_secret_change_this_in_production_32chars
JWT_EXPIRE=30d

# Frontend (for CORS)
FRONTEND_URL=http://localhost:3000

# ML Services (Docker handles these automatically)
ML_DETECTION_URL=http://temple-ml-detection-dev:8000
ML_FORECASTING_URL=http://temple-ml-forecasting-dev:8000

# Gemini AI Bot (Optional — get key from https://aistudio.google.com)
# GEMINI_API_KEY=your_gemini_api_key_here

# Email Notifications (Optional)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
